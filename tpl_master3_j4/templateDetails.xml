    <php_minimum>7.2</php_minimum>
    <uikit_actual>3.13.7</uikit_actual>
    <scriptfile>script.php</scriptfile>

    <files>
        <filename>config.php</filename>
        <filename>index.php</filename>
        <filename>component.php</filename>
        <filename>component_ajax.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>apple-touch-icon.png</filename>
        <filename>favicon.png</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
        <folder>html</folder>
        <folder>layouts</folder>
    </files>

    <positions>
        <position>toolbar-left</position>
        <position>toolbar-right</position>
        <position>logo</position>
        <position>headbar</position>
        <position>navbar-left</position>
        <position>navbar-center</position>
        <position>navbar-right</position>
        <position>breadcrumb</position>
        <position>main-top</position>
        <position>main-bottom</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>block-a</position>
        <position>block-b</position>
        <position>block-c</position>
        <position>block-d</position>
        <position>block-e</position>
        <position>block-f</position>
        <position>block-g</position>
        <position>block-h</position>
        <position>block-i</position>
        <position>block-k</position>
        <position>footer-left</position>
        <position>footer-center</position>
        <position>footer-right</position>
        <position>offcanvas</position>
        <position>offcanvas-menu</position>
    </positions>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.tpl_master3_j4.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.tpl_master3_j4.sys.ini</language>
    </languages>

    <config>
        <fields name="params">

            <fieldset name="basic" label="TPL_MASTER3_TAB_BASIC_LABEL">
                <field name="templateLayouts" type="sflayouts" label="TPL_MASTER3_TEMPLATELAYOUTS_LABEL" layout="joomla.form.field.subform.repeatable-table" groupByFieldset="false" multiple="true" buttons="none">
                    <form>
                        <fieldset>
                            <field name="name" type="text" label="TPL_MASTER3_LAYOUTS_FORM_LNAME" readonly="true" />
                            <field name="menuassign" type="menuitem" label="TPL_MASTER3_LAYOUTS_FORM_MENUASSIGN" default="" class="input-xxlarge" multiple="true" />
                        </fieldset>
                    </form>
                </field>
                <field name="spacerLauouts" type="spacer" hr="true" />

                <field name="noteLogo" type="note" label="TPL_MASTER3_SUBTITLE_LOGO" />
                <field name="logoFile" type="media" label="TPL_MASTER3_LOGO_LABEL" description="TPL_MASTER3_LOGO_DESC" default="" />
                <field name="siteTitle" type="text" label="TPL_MASTER3_TITLE_LABEL" description="TPL_MASTER3_TITLE_DESC" default="" filter="string" />
                <field name="spacerLogo" type="spacer" hr="true" />

                <field name="noteIcons" type="note" label="TPL_MASTER3_SUBTITLE_ICONS" />
                <field name="favicon" type="media" label="TPL_MASTER3_FAVICON_LABEL" default="" />
                <field name="faviconApple" type="media" label="TPL_MASTER3_FAVICONAPPLE_LABEL" default="" />
                <field name="spacerIcons" type="spacer" hr="true" />

                <field name="totop" type="radio" label="TPL_MASTER3_TOTOP_LABEL" default="1" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="offlineLoginForm" type="radio" label="TPL_MASTER3_OLF_LABEL" default="1" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="denyUserAuthorization" type="radio" label="TPL_MASTER3_DUA_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="spacerSM" type="spacer" hr="true" />
            </fieldset>

            <fieldset name="head" label="TPL_MASTER3_TAB_HEAD_LABEL">
                <field name="noteCSS" type="note" label="TPL_MASTER3_SUBTITLE_CSS" />
                <field name="cssUikit" type="list" label="TPL_MASTER3_CSS_UIKIT_LABEL" default="uikit.min.css">
                    <option value="none">TPL_MASTER3_CSS_UIKIT_NO</option>
                    <option value="uikit.css">TPL_MASTER3_CSS_UIKIT_BASED</option>
                    <option value="uikit.min.css">TPL_MASTER3_CSS_UIKIT_MINIFIED</option>
                    <option value="uikit-rtl.css">TPL_MASTER3_CSS_UIKIT_RTL</option>
                    <option value="uikit-rtl.min.css">TPL_MASTER3_CSS_UIKIT_RTLMINIFIED</option>
                </field>
                <field name="cssCustom" type="radio" label="TPL_MASTER3_CSS_CUSTOM_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="cssAddons" type="textarea" label="TPL_MASTER3_CSS_ADDONS_LABEL" description="TPL_MASTER3_CSS_ADDONS_DESC" rows="3" default="" class="input-xxlarge" />
                <field name="cssGotoBottom" type="radio" label="TPL_MASTER3_CSS_GOTO_BOTTOM_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="spacerCSS" type="spacer" hr="true" />

                <field name="noteJS" type="note" label="TPL_MASTER3_SUBTITLE_JS" />
                <field name="jsJQ" type="radio" label="TPL_MASTER3_JS_JQ_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="jsUikit" type="list" label="TPL_MASTER3_JS_UIKIT_LABEL" default="uikit.min.js">
                    <option value="none">TPL_MASTER3_JS_UIKIT_NO</option>
                    <option value="uikit.js">TPL_MASTER3_JS_UIKIT_BASED</option>
                    <option value="uikit.min.js">TPL_MASTER3_JS_UIKIT_MINIFIED</option>
                </field>
                <field name="jsIcons" type="list" label="TPL_MASTER3_JS_ICONS_LABEL" default="uikit-icons.min.js">
                    <option value="none">TPL_MASTER3_JS_ICONS_NO</option>
                    <option value="uikit-icons.js">TPL_MASTER3_JS_ICONS_BASED</option>
                    <option value="uikit-icons.min.js">TPL_MASTER3_JS_ICONS_MINIFIED</option>
                </field>
                <field name="jsCustom" type="radio" label="TPL_MASTER3_JS_CUSTOM_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="jsAddons" type="textarea" label="TPL_MASTER3_JS_ADDONS_LABEL" description="TPL_MASTER3_JS_ADDONS_DESC" rows="3" default="" class="input-xxlarge" />
                <field name="jsGotoBottom" type="radio" label="TPL_MASTER3_JS_GOTO_BOTTOM_LABEL" default="0" layout="joomla.form.field.radio.switcher" filter="boolean">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

        </fields>
    </config>

</extension>
